doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width,initial-scale=1,user-scalable=0")
		title 执行结果
		link(href="http://cdn.bootcss.com/weui/0.4.2/style/weui.css",rel="stylesheet")
	body
		.weui_msg
			.weui_icon_area
				if isSuccess
					i(class="weui_icon_success weui_icon_msg")
				else
					i(class="weui_icon_warn weui_icon_msg")
			.weui_text_area
				if	isSuccess
					if point
						h2(class="weui_msg_title") 您的绩点为#{point}
					else
						h2(class="weui_msg_title") 操作成功
						p(class="weui_msg_desc") #{msg}
				else
					h2(class="weui_msg_title") 操作失败
					p(class="weui_msg_desc") #{msg}
			.weui_opr_area
				p(class="weui_btn_area")
					if isSuccess
						a(href="javascript:WeixinJSBridge.call('closeWindow');" class="weui_btn weui_btn_primary") 确定
						a(href="javascript:history.go(-1)" class="weui_btn weui_btn_plain_primary") 返回
					else
						if msg==='密码错误，改密码啦？'
							a.weui_btn.weui_btn_default(href="/ecard/#{openId}/update") 重新绑定
						a(href="javascript:history.go(-1);" class="weui_btn weui_btn_warn") 确定
	script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")